<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="com.fortify.samples.riches.model.Account" table="account" >
        <id name="id" column="id" type="java.lang.Long" unsaved-value="null">
            <generator class="native"/>
        </id>
        <property name="username" column="username" type="java.lang.String" />
        <property name="acctno" column="acctno" type="java.lang.String" />
        <property name="balance" column="balance" type="java.lang.Double" />
        <property name="ccn" column="ccn" type="java.lang.String" />
    </class>
</hibernate-mapping>